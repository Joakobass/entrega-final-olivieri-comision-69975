<header>
    <h1>Productos</h1>
</header>
<div class="container" style="display: flex; align-items: center; width: 90%">
    {{#if products.hasPrevPage}}
        <a href="/products?page={{products.prevPage}}{{#if sort}}&sort={{sort}}{{/if}}{{#if limit}}&limit={{limit}}{{/if}}" class="btn-normal" style="width: 60%; text-align: center; text-decoration:none; margin: 10px" >Anterior</a>
    {{/if}}
    {{#if products.hasNextPage}}
        <a href="/products?page={{products.nextPage}}{{#if sort}}&sort={{sort}}{{/if}}{{#if limit}}&limit={{limit}}{{/if}}" class="btn-normal" style="width: 60%; text-align: center; text-decoration:none">Siguiente</a>
    {{/if}}

    <a href="/products?page={{products.page}}{{#if limit}}&limit={{limit}}{{/if}}&sort=asc" class="btn-normal" style="width: 10%; text-align: center; text-decoration:none; margin-left: 10px">⬇</a>
    <a href="/products?page={{products.page}}{{#if limit}}&limit={{limit}}{{/if}}&sort=desc" class="btn-normal" style="width: 10%; text-align: center; text-decoration:none; margin-left: 10px">⬆</a>
    <a href="/products?page={{products.page}}{{#if limit}}&limit={{limit}}{{/if}}" class="btn-normal" style="width: 10%; text-align: center; text-decoration:none; margin-left: 10px">X</a>

    <div style="margin: 10px; text-align: center; font-size: 12px;">
        <p>Página {{products.page}} de {{products.totalPages}}</p>
        <p>{{products.totalDocs}} Documentos</p>
    </div>
    <a id="go-cart-btn" class="btn-normal" style="width: 80%; text-align: center; text-decoration:none">Ir al carrito</a>
</div>

<div class="product-container">
    {{#each products.docs}}
        <div class="product-card">
                <img src={{this.thumbnail}} alt="Producto">
                <div class="info">
                    <h2>{{this.title}}</h2>
                    <p>{{this.description}}</p>
                    <p>{{this.category}}</p>
                    <p style="font-size: 12px;">Disponible: {{#if this.status}}✅{{else}}⛔{{/if}}</p>
                    <div class="price">$ {{this.price}}</div>
                    <button class="add-btn" data-id={{this._id}}>Añadir al carrito</button>
                </div>
        </div>
    {{/each}}
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/products.js"></script>

